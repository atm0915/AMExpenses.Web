@model BalanceViewModel
@{
  ViewBag.Title = "Balance";
}
<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card text-white bg-info mb-3" style="">
      <div class="card-body">
        <h5 class="card-title text-center">Current Statement</h5>
        <div>
          <div class="float-left">Current Credit:</div>
          <div class="float-right">$@Model.Credit</div>
          <br/>
        </div>
        <br/>
        <div>
          <div class="float-left">Current Credit On Account:</div>
          <div class="float-right">$@Model.CreditOnAccount</div>
          <br/>
        </div>
        <br/>
        <div>
          <div class="float-left"><b>Total:</b></div>
          <div class="float-right"><b>$@Model.Total</b></div>
          <br/>
        </div>
        <br/>
        <br/>
        <form>
          <button class="btn btn-primary btn-block" asp-action="NewTransaction">Add New Transaction</button>
          <button class="btn btn-primary btn-block" asp-action="Log">Transaction Log</button>
        </form>
      </div>
    </div>
  </div>
</div>